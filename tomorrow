#!/usr/bin/env bash

action=$1

function usage {
	echo "  $(basename $0)"
	echo "    List tasks that are due tomorrow"
	echo ""
	exit
}

[ "$action" = "usage" ] && usage

if [ $(uname) != "Darwin" ]
then
    TOMORROW=$(date --date="tomorrow" +%Y-%m-%d)
else
    TOMORROW=$(date -v "+1d" +%Y-%m-%d)
fi

cd "$TODO_DIR"
grep "due:$TOMORROW" $TODO_FILE | sed "s/due:$TOMORROW/due:tomorrow/g"
